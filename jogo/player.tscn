script/source = "extends CharacterBody2D

@export var walk_speed := 300.0
@export var run_speed := 550.0
@export var step_interval := 0.2 # tempo mínimo entre passos (em segundos)
@export var vision_scene: PackedScene # referência para a cena do círculo de visão

@export var sound_radius_walking = 5.0
@export var sound_radius_running = 15.0

@onready var sound_area = $SoundArea
@onready var sound_shape = $SoundArea/CollisionShape2D

var time_since_last_step := 0.0

signal hit

func _physics_process(delta):
	var input_dir = Input.get_vector(\"move_left\", \"move_right\", \"move_up\", \"move_down\").normalized()

	if input_dir == Vector2.ZERO:
		velocity = Vector2.ZERO
		update_sound_radius(0)
	else:
		var current_speed = walk_speed
		var sound_radius = sound_radius_walking
		
		if Input.is_action_pressed(\"running\"):
			current_speed = run_speed
			sound_radius = sound_radius_running
		
		velocity = input_dir * current_speed
		update_sound_radius(sound_radius)

		# controle de \"passos\" para criar visão
		time_since_last_step += delta
		if time_since_last_step >= step_interval:
			create_vision_circle()
			time_since_last_step = 0.0

	move_and_slide()


func update_sound_radius(radius: float):
	if sound_shape.shape is CircleShape2D:
		sound_shape.shape.radius = radius


func create_vision_circle():
	if vision_scene:
		var vision = vision_scene.instantiate()
		get_parent().add_child(vision)         # adiciona na mesma camada do jogador (ou no nó adequado da cena)
		vision.global_position = global_position

		# opcional: ajustar parâmetros iniciais (ex.: começar pequeno)
		if vision.has_method(\"set_initial_radius\"):
			vision.set_initial_radius(20.0) # se implementar esse método global_position


func _on_body_entered(body):
	hide()
	hit.emit()
	$CollisionShape2D.set_deferred(\"disabled\", true)

func start(pos):
	global_position = pos
	show()
	$CollisionShape2D.disabled = false
"

